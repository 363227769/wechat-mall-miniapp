page {
  background-color: #f5f5f5;
}
.container {
  width: 100%;
}
.coupons {
  padding: 30rpx 0;
}
.coupon {
  position: relative;
  width: 700rpx;
  height: 240rpx;
}
.coupon .bg-image {
  position: absolute;
  width: 700rpx;
  height: 240rpx;
}
.coupon .amount {
  position: absolute;
  top: 70rpx;
  color: #EB4D50;
  font-size: 44rpx;
  width: 450rpx;
  text-align: center;
}
.coupon .amount text {
  font-size: 22rpx;
}
.coupon .use-scope {
  position: absolute;
  bottom: 38rpx;
  color:#999999;
  font-size: 22rpx;
  width: 450rpx;
  text-align: center;
}
.coupon .take-btn {
  position: absolute;
  right: 15rpx;
  top: 60rpx;
  color: white;
  font-size: 34rpx;
  width: 240rpx;
  text-align: center;
}
.coupon .deadline {
  position: absolute;
  right: 15rpx;
  bottom: 40rpx;
  color: white;
  font-size: 22rpx;
  width: 240rpx;
  text-align: center;
}