page {
  background-color: #f5f5f5;
}
.edit-address {
  padding: 0 20rpx;
  background-color: #ffffff;
  margin: 1px;
}
.edit-address .item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-bottom: 1px solid #F7F7F7;
  padding: 20rpx;
}
.item .l {
  color: #979797;
  width: 100rpx;
}
.item .r {
  margin-left: 20rpx;
}
.save-btn {
  position: fixed;
  width: 100%;
  height: 80rpx;
  background-color: #EB405D;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  bottom: 0;
  font-size: 24rpx;
}