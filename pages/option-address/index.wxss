page {
  background-color: #f5f5f5;
}
.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 30rpx;
}
.empty-l, .empty-r {
  width: 200rpx;
  height: 1px;
  background-color: #999999;
  margin: 20rpx;
}
.new-address {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #ffffff;
  padding: 20rpx 0;
}
.new-address .btn {
  margin-right: 20rpx;
  font-size: 24rpx;
}
.address {
  padding: 20rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.address .phone {
  font-size: 22rpx;
  color: #999999;
  margin-left: 10rpx;
}
.address .detail {
  padding: 10rpx 0;
}
.address .default {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1px solid #F7F7F7;
}
.default .l {
  display: flex;
  align-items: center;
}
.default .r {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 22rpx;
}
.btn-item {
  margin-right: 20rpx;
  display: flex;
}
.btn-item image {
  width: 30rpx;
  height: 30rpx;
}
.add-btn {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #EB405D;
  line-height: 100rpx;
  text-align: center;
  color: #ffffff;
  bottom: 0;
  font-size: 28rpx;
}
/* 单选按钮 */
.radio {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #D8D8D8;
  border-radius: 40rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.checked {
  border-color: #EB405D;
}
.radio image {
  width: 24rpx;
  height: 24rpx;
}
