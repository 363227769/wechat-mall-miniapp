page {
  width: 100vw;
  height: 100vh;
}
page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.container {
  width: 100vw;
  height: 100vh;
}

.search {
  width: 730rpx;
  padding: 10rpx 0rpx;
}
.search input {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  padding-left: 60rpx;
  padding-right: 20rpx;
  font-size: 12px;
  background-color: #f5f5f5;
}
.search image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 25rpx;
  left: 28rpx;
}

.content-container {
  width: 100vw;
  height: 100%;
  margin-top: 32rpx;
  display: flex;
}

.category-container {
  width: 180rpx;
  height: 100%;
}

.category-container .category {
  text-align: center;
  border-left: 4rpx solid white;
  margin-bottom: 40rpx;
}

.category-container .category.active {
  background: #fff;
  border-left: 4rpx solid #d81e06;
}

.category-container .category .name {
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.category-container .category .name.active {
  color: #d81e06;
  font-weight: bold;
}

.goods-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
}

.goods-container .title {
  text-align: left;
  padding: 10rpx 30rpx;
  color: #515151;
  font-size: 22rpx;
  line-height: 30rpx;
  background: rgba(216, 30, 6, 0.3);
}

.goods-container .goods {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
}

.goods-container .goods .pic .fresh-tag {
  position: absolute;
  top: 15rpx;
  left: 25rpx;
  width: 60rpx;
  height: 60rpx;
}

.goods-container .goods .name {
  color: #000;
  font-size: 28rpx;
  line-height: 46rpx;
}

.goods-container .goods .soldInfo {
  align-items: flex-start;
  margin-top: 20rpx;
  height: 70rpx;
}

.goods-container .goods .soldInfo .good-price-box {
  display: flex;
  align-items: baseline;
  overflow: hidden;
  font-size: 22rpx;
  line-height: 22rpx;
}

.good-price-box .price {
  color: #d81e06;
  margin-top: 10rpx;
  width: 150rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.good-price-box .saleNum {
  font-size: 22rpx;
  flex-grow: 1;
  color: #999999;
}

.ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.medium-category {
  margin: 32rpx 0;
}
.medium-category .line {
  width:60rpx;
}
.medium-category .txt {
  color: #333;
}
.small-category-box {
  width: 570rpx;
  display: flex;
  flex-wrap: wrap;
}
.small-category {
  width: 147rpx;
  margin-top: 32rpx;
  margin-left: 32rpx;
}
.small-category image {
  width: 147rpx;
  height: 147rpx;
}
.small-category view {
  text-align: center;
  font-size: 24rpx;
  color: #666;
}