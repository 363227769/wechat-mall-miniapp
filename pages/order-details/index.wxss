page {
  background-color: #f5f5f5;
}
.address {
  margin-top: 1px;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  font-size: 24rpx;
}
.address image {
  width: 40rpx;
  height: 40rpx;
}
.address .info {
  margin-left: 20rpx;
}
.info .phone {
  font-size: 22rpx;
  color: #999999;
  margin-left: 20rpx;
}
.goods-info {
  margin-top: 15rpx;
  background-color: #ffffff;
  padding: 20rpx;
}
.goods-info .title {
  font-size: 24rpx;
  font-weight: bold;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-left: 1px solid #EB405D;
}
.goods-list {
  margin-top: 10rpx;
}
.goods-list .goods {
  border-top: 1px solid #F7F7F7;
  display: flex;
  padding: 20rpx
}
.goods image {
  width: 120rpx;
  height: 120rpx;
}
.goods .info {
  font-size: 24rpx;
  width: 380rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-left: 20rpx;
}
.info .specs {
  display: inline;
  background-color: #F3F3F3;
  padding: 5rpx 10rpx;
  font-size: 22rpx;
  color: #999999;
}
.goods .amount {
  flex-grow: 1;
  font-size: 24rpx;
  text-align: right;
}
.amount .price {
  font-weight: bold;
}
.amount .num {
  color: #999999;
}
.cast-detail {
  background-color: #ffffff;
  padding: 20rpx 0 0;
  font-size: 22rpx;
}
.cast-detail .cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cast-detail .actual {
  font-size: 24rpx;
}

.order-info {
  margin-top: 15rpx;
  background-color: #ffffff;
  padding: 20rpx;
}
.order-info .title {
  font-size: 24rpx;
  font-weight: bold;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-left: 1px solid #EB405D;
}
.order-info .orderNo {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-info .order-item {
  padding: 4rpx 20rpx;
  font-size: 22rpx;
  color: #999999;
}
.btn-group {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btn-group .btn {
  border: 1px solid #666666;
  padding: 5rpx 15rpx;
  display: inline-block;
  color: #666666;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.navigator-hover {
  background-color: #ffffff;
  opacity: 1
}